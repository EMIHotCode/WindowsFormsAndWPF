<Window x:Class="WPF_Lesson5_1ПланировщикМероприятий.WindowForChangeEvents"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Lesson5_1ПланировщикМероприятий"
        mc:Ignorable="d"
        Title="WindowForViewEvents" Height="450" Width="800">
    <StackPanel>
        <DataGrid ItemsSource="{Binding myEvents}" IsReadOnly="True" Height="380" Margin="0,76,0,140">
            <Button Content="Выход" Click="Button_Click"/>
        </DataGrid>

    </StackPanel>
</Window>

